<% layout("/layouts/boilerplate") -%>
<body>
  <h3>All Listings</h3>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-links">
        <div class="card col listings-card ">
          <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem" />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">  
              <b><%= listing.title %><br></b>
              <% if (listing.price != null) { %>
                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
              <% } else { %>
                <span class="text-muted">Price not available</span>
              <% } %>
            </p>
          </div>
        </div>
      </a>
    <% } %>
  </div>
</body>