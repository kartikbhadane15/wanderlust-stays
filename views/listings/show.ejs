<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-3 show-card listings-card">
    <% const imgSrc = (listing.image && listing.image.url) ? listing.image.url : '/images/placeholder.jpg'; %>
    <img src="<%= imgSrc %>" class="card-img-top show-img" alt="Listing_image">
    <div class="card-body">
      <% const ownerName = listing.owner ? listing.owner.username : 'Unknown'; %>
      <p class="card-text">Owned by <i><%= ownerName %></i></p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %></p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>

  <br>

<% if(currUser && listing.owner._id.equal(currUser._id)) {%>
  <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-dark offset-3">Delete</button>
    </form>
  </div>
<% } %>
  

  <div class="col-8 offset-3 mb-3">
    
    <hr>
    <% if(currUser) { %>
    <h4>Leave a Review</h4>
    <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" id="rating" name="review[rating]" min="1" max="5" class="form-range" required>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comment</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>
    
    <hr>
    <% } %>

    <p><b>All Reviews</b></p>
    <div class="row">
      <% for(let review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">Created by: @<%= review.author.username %></h5>
            <p class="card-title">Rating: <%= review.rating %> / 5 Stars</p>
            <p class="card-text">Comment: <%= review.comment %></p>
          </div>
          <form class="mb-3" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
      <% } %>
    </div>
  </div>
</div>

<script src="/public/js/script.js"></script>